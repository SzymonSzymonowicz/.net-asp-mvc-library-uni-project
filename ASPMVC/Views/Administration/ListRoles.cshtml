@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
    Layout = "_Layout";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-success mb-4" style="width:auto"
       asp-controller="administration" asp-action="CreateRole">
        Add new role
    </a>

    foreach (IdentityRole role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a class="btn btn-primary" asp-controller="Administration"
                       asp-action="EditRole" asp-route-id="@role.Id">Edit</a>

                    <input value="Delete "type="submit" class="btn btn-danger text-white"/>
                </form>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}